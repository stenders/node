extends layout

block content
  div.page-header
    h1.text-center Add post
  form.form-horizontal(method="post", role="form")
    div.form-group
      input.form-control(type="text", name="title", placeholder="title")
    div.form-group
      textarea.form-control(rows="3", name="post" placeholder="Add post")
    div.form-group
      button.btn.btn-success(type="submit") Add post